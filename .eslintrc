{
    "plugins": [
        "react",
        "react-native"
    ],
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "env": {
        "react-native/react-native": true
    },
    "rules": {
        // overrides
        "react-native/no-unused-styles": 2,
        "react-native/split-platform-components": 2,
        "react-native/no-inline-styles": 2
    },
    "parserOptions": {
        "ecmaVersion": 7,
        "sourceType": "module"
    }
}